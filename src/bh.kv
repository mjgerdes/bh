#:kivy 1.0.9


<PayButton>:
	size: 100, 50
    canvas:
		Color:
			rgba: 1, 0, 0, 1
        Rectangle:
            pos:self.pos
            size:self.size

<Bh>:
	pay: pay_button
    PayButton:
		id: pay_button
		center: self.parent.center
	Label:
        font_size: 20 
        center_x: pay_button.center[0]
        top: pay_button.center[1]+50
        text: str('pay 100$')

